{
    "compilerOptions": {
        "resolveJsonModule": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "lib": ["es6"],
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "types": ["node"],
        "experimentalDecorators": true
    },
    "include": [
        "./index.ts"
    ]
}