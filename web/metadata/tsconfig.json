{
    "compilerOptions": {
        "jsx": "react",
        "lib": ["dom"],
        "resolveJsonModule": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "client/dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "experimentalDecorators": true
    },
    "include": [
      "./index.ts"
    ]
}